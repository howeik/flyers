<form class="form-horizontal">
  <fieldset>

    <!-- Form Name -->
    <legend>Add Event</legend>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="EventName">Event Title</label>
      <div class="controls">
        <input id="EventName" name="EventName" type="text" placeholder="" class="input-xlarge">

      </div>
    </div>

    <!-- Text input-->
    <div class="control-group">
      <label class="control-label" for="EventLocation">Location</label>
      <div class="controls">
        <input id="EventLocation" name="EventLocation" type="text" placeholder="" class="input-large">

      </div>
    </div>

    <!-- Textarea -->
    <div class="control-group">
      <label class="control-label" for="EventDescription">Description</label>
      <div class="controls">
        <textarea id="EventDescription" name="EventDescription"></textarea>
      </div>
    </div>

  </fieldset>
</form>
